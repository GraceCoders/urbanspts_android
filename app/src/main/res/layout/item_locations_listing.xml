<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_8sdp"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:elevation="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:id="@+id/img_cover"
                android:scaleType="fitXY"
                android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/boarder_location"
            android:layout_height="@dimen/_40sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/location"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
            <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewMedium
                android:layout_width="wrap_content"
                android:text="160"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewAlex
                    android:layout_width="wrap_content"
                    android:text="meet me in"
                    android:id="@+id/tv_title"
                    android:textStyle="italic"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_26sdp"
                    android:layout_height="wrap_content"/>
                <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewSemiBold
                    android:layout_width="wrap_content"
                     android:id="@+id/tv_states"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_26sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>