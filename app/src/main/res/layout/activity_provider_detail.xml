<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    tools:context=".view.activity.EditProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_header"
            android:layout_height="@dimen/_130sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/back"
                android:id="@+id/iv_back"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
            <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewBold
                android:layout_width="wrap_content"
                android:id="@+id/tv_provider_name"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_20sdp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/img_cover"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/boarder_location"
                android:layout_height="@dimen/_30sdp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/star"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"/>
                <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:alpha="0.6"
                android:orientation="horizontal"
                android:background="@color/colorlightblack"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/_35sdp">
                <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewRegular
                    android:layout_width="wrap_content"
                    android:text="Add to Wishlist"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_fav"
                    android:layout_width="21dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/wishlist" />

                <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewRegular
                    android:layout_width="wrap_content"
                    android:text="Share This"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/share"
                    android:layout_height="25dp"/>

            </LinearLayout>

        </RelativeLayout>

        <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewRegular
            android:layout_width="wrap_content"
             android:id="@+id/tv_description"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/blacktext"
            android:layout_height="wrap_content"/>

        <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewBold
            android:layout_width="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:text="Amenities"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/blacktext"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/boarder_light_gray_outer"
            android:layout_height="wrap_content">
            <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewRegular
                android:layout_width="wrap_content"
                android:id="@+id/tv_amenties"
                android:textSize="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:layout_gravity="center"
                android:textColor="@color/blacktext"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewBold
            android:layout_width="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:text="Tags"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/blacktext"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/boarder_light_gray_outer"
            android:layout_height="wrap_content">
        <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewRegular
            android:layout_width="wrap_content"
            android:id="@+id/tv_tags"
            android:textSize="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:layout_gravity="center"
            android:textColor="@color/blacktext"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/_35sdp">
        <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewBold
            android:layout_width="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:layout_centerVertical="true"
            android:text="Contact info"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:src="@drawable/down_arrow"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
        <fragment
            android:id="@+id/map"
            android:name="com.urbanspts.urbanspts.view.fragment.FocusMapFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"/>

        <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewRegular
            android:layout_width="wrap_content"
            android:id="@+id/tv_address"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/blacktext"
            android:layout_height="wrap_content"/>
        <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewRegular
            android:layout_width="wrap_content"
            android:id="@+id/tv_mobile_number"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/blacktext"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:id="@+id/img_fb"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/facebook_icon"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:id="@+id/img_instagram"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/instagram_icon"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:id="@+id/img_twitter"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/twitter_icon"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:id="@+id/img_you_tube"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/youtube_icon"
                android:layout_height="wrap_content"/>
        </LinearLayout>

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorPrimary"
                android:layout_height="@dimen/_35sdp">
                <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    android:text="Timings"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/down_arrow"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewRegular
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/tv_opening_days"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/blacktext"
                android:layout_height="wrap_content"/>
            <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewRegular
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/tv_timings"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/blacktext"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorPrimary"
                android:layout_height="@dimen/_35sdp">
                <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    android:text="Book a Table"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/down_arrow"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
   <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewBold
                android:layout_width="wrap_content"
                android:text="Book Now"
                android:id="@+id/tv_book"
                android:layout_gravity="center"
                android:textSize="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/blacktext"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorPrimary"
                android:layout_height="@dimen/_35sdp">
                <com.urbanspts.urbanspts.controller.CustomViews.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    android:text="Reviews"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/down_arrow"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clProviderdetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/colorBlack"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>